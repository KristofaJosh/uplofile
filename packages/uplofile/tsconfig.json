{
  "compilerOptions": {
    "strict": true,
    "esModuleInterop": true,
    "declaration": true,
    "declarationMap": true,
    "emitDeclarationOnly": false,
    "composite": false,
    "skipLibCheck": true,
    "outDir": "dist",
    "moduleResolution": "bundler",
    "module": "esnext",
    "target": "es2020",
    "lib": ["ES2020", "DOM"],
    "jsx": "react-jsx"
  },
  "include": ["src/**/*"]
}
